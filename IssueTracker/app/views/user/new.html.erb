<div>
  <div>
    <h2>Sign Up</h2>
    <%= form_for :users, url: '/user' do |f| %>
      <table>
      <tr>
        <td>First Name </td>
        <td><%= f.text_field :first_name, :placeholder => 'First Name' %></td>
      </tr>
      <tr>
        <td>Last Name </td>
        <td><%= f.text_field :last_name, :placeholder => 'Last Name' %></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><%= f.text_field :email, :placeholder => 'Email' %></td>
      </tr>
      <tr>
        <td>Password </td>
        <td><%= f.password_field :password, :placeholder => 'Password' %></td>
      </tr>
      <tr>
        <td colspan="2"><%= f.submit "Sign up", :class => "form-btn" %></td>
      </tr>
      </table>
    <% end %>
  </div>
</div>
